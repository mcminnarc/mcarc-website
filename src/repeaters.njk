<h1>Repeater Frequencies</h1>

<h2>Club Repeaters</h2>

<table>
  <thead>
    <tr>
      <th>Callsign</th>
      <th>Frequency</th>
      <th>Offset</th>
      <th>Tone</th>
      <th>Location</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    {%- for rpt in repeaters.repeaters %}
    <tr>
      <td class="callsign">{{ rpt.callsign }}</td>
      <td class="frequency">{{ rpt.frequency }} MHz</td>
      <td>{{ rpt.offset }}</td>
      <td>{{ rpt.tone }}</td>
      <td>{{ rpt.location }}</td>
      <td class="status-{{ rpt.status }}">{{ rpt.status | upper }}</td>
    </tr>
    {%- endfor %}
  </tbody>
</table>

